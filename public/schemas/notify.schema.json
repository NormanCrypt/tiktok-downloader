{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notify config schema",
    "description": "Schema for notify config",
    "type": "object",
    "properties": {
        "services": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "service": {
                        "type": "string",
                        "enum": [
                            "chanify",
                            "file_reporter"
                        ]
                    },
                    "types": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "if": {
                                "properties": {
                                    "service": {
                                        "const": "chanify"
                                    }
                                }
                            },
                            "then": {
                                "enum": [
                                    "exception",
                                    "report",
                                    "shutdown",
                                    "start",
                                    "stop"
                                ]
                            },
                            "else": {
                                "if": {
                                    "properties": {
                                        "service": {
                                            "const": "file_reporter"
                                        }
                                    }
                                },
                                "then": {
                                    "enum": [
                                        "report"
                                    ]
                                }
                            }
                        }
                    },
                    "config": {
                        "type": "object",
                        "additionalProperties": false,
                        "if": {
                            "properties": {
                                "service": {
                                    "const": "chanify"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "token": {
                                    "type": "string"
                                },
                                "url": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "token"
                            ]
                        },
                        "else": {
                            "if": {
                                "properties": {
                                    "service": {
                                        "const": "file_reporter"
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "file_path": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "required": [
                    "service"
                ],
                "additionalProperties": false
            }
        }
    }
}