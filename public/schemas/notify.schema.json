{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notify config schema",
    "description": "Schema for notify config",
    "type": "object",
    "properties": {
        "services": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "service": {
                        "type": "string",
                        "enum": [
                            "chanify",
                            "file_reporter"
                        ]
                    }
                },
                "required": [
                    "service"
                ],
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "service": {
                                    "const": "chanify"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "types": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "exception",
                                            "report",
                                            "shutdown",
                                            "start",
                                            "stop"
                                        ]
                                    }
                                },
                                "config": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "url": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "token"
                                    ]
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "service": {
                                    "const": "file_reporter"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "types": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "report"
                                        ]
                                    }
                                },
                                "config": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "file_path": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}